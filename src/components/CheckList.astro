---
import CheckIcon from './icons/CheckIcon.astro'

interface Props {
  className?: string
  items: { title?: string; text: string }[]
}

const { className, items } = Astro.props
---

<ul class:list={['flex flex-col gap-4 self-start', className]}>
  {
    items.map((item) => (
      <li class='flex gap-2'>
        <CheckIcon className='w-6 h-6 shrink-0' />

        <div>
          {item.title ? (
            <div class='text-gray-900 font-bold mb-1'>{item.title}</div>
          ) : null}
          <p class='text-gray-600 leading-8'>{item.text}</p>
        </div>
      </li>
    ))
  }
</ul>
