---
import { Image } from 'astro:assets'

interface Props {
  title: string
  description: string
  imgSrc: string
}

const { title, description, imgSrc } = Astro.props
---

<div class='flex flex-col lg:flex-row gap-6 md:gap-16'>
  <Image src={imgSrc} alt='งานกำจัดปลวก' width={450} height={450} />

  <div class='space-y-4'>
    <slot name='icon' />

    <div class='space-y-4 max-w-lg'>
      <div class='text-gray-900 text-xl font-bold'>{title}</div>
      <p class='text-gray-600 leading-8'>
        {description}
      </p>
    </div>
  </div>
</div>
