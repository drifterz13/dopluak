---
interface Props {
  planName: string
  price: number
}

const { planName, price } = Astro.props
---

<div class='flex flex-col p-10 bg-gray-100 w-[350px] h-[520px] box-border'>
  <div class='space-y-2'>
    <div class='text-xl font-bold'>{planName}</div>
    <div class='text-3xl font-bold'>{price} บาท</div>
  </div>

  <div class='h-[1px] w-full bg-zinc-400 my-8'></div>

  <slot name='features' />

  <div class='mt-auto'>
    <button class='py-4 px-8 box-border w-full bg-zinc-900 text-white'
      >ติตต่อเรา</button
    >
  </div>
</div>
