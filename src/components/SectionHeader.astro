---
interface Props {
  className?: string
}

const { className } = Astro.props
---

<div class:list={['space-y-6 max-w-xl', className]}>
  <h2 class='text-2xl md:text-3xl font-bold'>
    <slot name='title' />
  </h2>

  <p class='text-gray-600 leading-8'>
    <slot name='description' />
  </p>
</div>
